{
    "env": {
		"node": true,
		"es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
		],
		"no-console": [
			"error", 
			{ 
				"allow": 
				[
					"warn",
					"log"
				] 
			}
		],
        "quotes": [
            "error",
            "backtick"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}